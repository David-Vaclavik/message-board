<body>
    <div class="main-container">
        <div class="wrapper">
            <h1>Create a message</h1>

            <% if (errors.length > 0) { %>
                <div class="errors">
                    <ul>
                        <% errors.forEach((error) => { %>
                            <li><%= error.msg %></li>
                        <% }); %>
                    </ul>
                </div>
            <% } %>
            
            <%- include('form') %>

            <a href="/" class="button">Cancel</a>
        </div>
    </div>
</body>

